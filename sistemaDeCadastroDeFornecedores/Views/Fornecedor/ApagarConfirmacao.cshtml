@model FornecedorModel
@{
    ViewData["Title"] = "Confirmação apagar o Fornecedor";
}

<div>
    <h3 class="mb-3">Realmente deseja apagar o Fornecedor (@Model.Name)?</h3>
</div>

<a class="btn btn-primary col-12 mb-3" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger col-12" role="button" asp-controller="Fornecedor" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>